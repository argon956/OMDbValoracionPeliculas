    .container.mt-4
      table.table
        thead
          tr
            th(scope="col") ID (IMDb)
            th(scope="col") Título
            th(scope="col") Año
            th(scope="col") Valoración
        tbody
          each pelicula in peliculas
            +filaTabla(pelicula)
